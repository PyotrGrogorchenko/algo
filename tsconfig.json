{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES6", "DOM"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
